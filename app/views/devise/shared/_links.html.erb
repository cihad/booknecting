<div class="ui sub menu">
  <% if controller_name != 'sessions' %>
    <%= link_to t('users.signin'), new_session_path(resource_name), class: "item" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('users.signup'), new_registration_path(resource_name), class: "item" %>
  <% end %>

  <% if devise_mapping.recoverable? && 
        controller_name != 'passwords' &&
        controller_name != 'registrations' %>
    <%= link_to t('users.forgot_your_password'), new_password_path(resource_name), class: "item" %>
  <% end %>
</div>