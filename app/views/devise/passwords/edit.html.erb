<%= page_title t('users.change_your_password') %>

<%= simple_form_for resource,
                    as: resource_name,
                    url: password_path(resource_name),
                    html: { :method => :put } do |f| %>

  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.input :password, label: t('users.new_password'), required: true, autofocus: true %>
  <%= f.input :password_confirmation, label: t('users.confirm_your_new_password'),
              required: true %>

  <%= f.button :submit, t('users.change_my_password') %>
<% end %>