<!DOCTYPE html>
<html>
<head>
  <title>Booknecting</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">    
    <div class="ui page grid">
      <div class="column">
        <%= render 'header' %>

        <div class="ui segment">
          <%= render 'messages' %>
          <%= yield %>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
